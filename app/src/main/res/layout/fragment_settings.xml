<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginEnd="6dp"
            android:backgroundTint="#FFFFFF"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="설정"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Space
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F0F0"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/emailButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_setting_background"
                android:stateListAnimator="@null"
                android:text="         이메일 연동하기"
                android:textAlignment="textStart"
                android:textColor="#020202" />

            <android.widget.Button
                android:id="@+id/backUpButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/button_setting_background"
                android:stateListAnimator="@null"
                android:text="         백업하기"
                android:textAlignment="textStart"
                android:textColor="#020202" />

            <android.widget.Button
                android:id="@+id/dataUploadButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/button_setting_background"
                android:stateListAnimator="@null"
                android:text="         데이터 불러오기"
                android:textAlignment="textStart"
                android:textColor="#020202" />

            <android.widget.Button
                android:id="@+id/versionButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_setting_background"
                android:stateListAnimator="@null"
                android:text="         버전"
                android:textAlignment="textStart"
                android:textColor="#020202" />

            <android.widget.Button
                android:id="@+id/termsButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/button_setting_background"
                android:stateListAnimator="@null"
                android:text="         이용약관"
                android:textAlignment="textStart"
                android:textColor="#020202" />

            <android.widget.Button
                android:id="@+id/privacyButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/button_setting_background"
                android:stateListAnimator="@null"
                android:text="         개인정보처리방침"
                android:textAlignment="textStart"
                android:textColor="#020202" />

            <android.widget.Button
                android:id="@+id/askButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/button_setting_background"
                android:stateListAnimator="@null"
                android:text="         문의하기"
                android:textAlignment="textStart"
                android:textColor="#020202" />

            <android.widget.Button
                android:id="@+id/accountDeleteButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_setting_background"
                android:stateListAnimator="@null"
                android:text="         계정 삭제"
                android:textAlignment="textStart"
                android:textColor="#EF5252" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">

                <android.widget.Button
                    android:id="@+id/logoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/button_setting_background"
                    android:stateListAnimator="@null"
                    android:text="         로그아웃"
                    android:textAlignment="textStart"
                    android:textColor="#020202" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>